{
    "diagnostic.displayByAle": true,
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            },
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ]
        }
    },
    "vetur.format.defaultFormatterOptions": {
        "prettier": {
            "semi": true,
            "singleQuote": false,
            "trailingComma": "es5"
        }
    },
    "coc.preferences.formatOnSaveFiletypes": ["vue", "json", "javascript"],
    "vetur.format.options.useTabs": false,
    "vetur.format.options.tabSize": 2,
    "vetur.grammar.customBlocks": {
        "page-query": "graphql",
        "static-query": "graphql"
    }
}
